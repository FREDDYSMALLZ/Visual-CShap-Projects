
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (!Model?.Any)
{
    <p>We don not have any customers yet!</p>
}
else
{
    <table class="table-bordered table-hover">
        <thead>
        <tr>
            <td>Customer</td>
            <th>Discount Rate</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
              
                <td>@LinkExtensions.ActionLink(Html, customer.Name, "Details", "Customers", new {id = customer.id}, null)</td>
                <td>@customer.MembershipType.DiscountRte</td>
            </tr>
        }
        </tbody>

    </table>
}

